{
  # Railway gives you a single $PORT to listen on.
  # If you later attach a custom domain with TLS, you can switch to "https://your.domain"
  # and remove auto_https off.
  auto_https off
}

:{$PORT} {
  encode gzip zstd

  log {
    output stdout
    format console
  }

  # --- API (adjust paths to your app) ---
  @api path /api* /trpc* /webhook*
  handle @api {
    # Point to your backend service URL (set API_ORIGIN in Railway env)
    reverse_proxy {$API_ORIGIN} {
      header_up Host {upstream_hostport}
      header_up X-Forwarded-For {remote}
      header_up X-Forwarded-Proto {scheme}
    }
  }

  # --- Static assets with long cache ---
  @assets {
    path *.js *.css *.png *.jpg *.jpeg *.svg *.ico *.webp *.woff *.woff2
  }
  handle @assets {
    root * /srv/app/dist
    file_server
    header Cache-Control "public, max-age=31536000, immutable"
  }

  # --- SPA fallback (React Router) ---
  handle {
    root * /srv/app/dist
    try_files {path} /index.html
    file_server
    header {
      X-Content-Type-Options "nosniff"
      Referrer-Policy "strict-origin-when-cross-origin"
    }
  }
}
